<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/storeCardView_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/storeCardView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/storeCardView_image"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="가게 이름" />

            <TextView
                android:id="@+id/storeCardView_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storeCardView_title"
                android:layout_toEndOf="@+id/storeCardView_image"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="소개" />

            <TextView
                android:id="@+id/storeCardView_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/storeCardView_subtitle"
                android:layout_marginRight="53dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/storeCardViw_image"
                android:text="위치" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>